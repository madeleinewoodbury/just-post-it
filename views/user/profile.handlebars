<!-- HEADER -->
<header id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fas fa-user"></i> Edit Profile</h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-4 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/" class="btn btn-light btn-block">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
      </div>
      <div class="col-md-3">
        <a href="#" data-toggle="modal" data-target="#changePasswordModal" class="btn btn-success btn-block">
          <i class="fas fa-lock"></i> Change Password
        </a>
      </div>
      <div class="col-md-3">
        <a href="#" class="btn btn-danger btn-block" data-toggle="modal" data-target="#deleteUserModal">
          <i class="fas fa-trash"></i> Delete Account
        </a>
      </div>
    </div>
  </div>
</section>

<!-- PROFILE -->
<section id="profile">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            <h4>Edit Profile</h4>
          </div>
          <div class="card-body">
            <form action="/user/profile/edit/?_method=PUT" method="post">
              <input type="hidden" name="_method" value="PUT">
              <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" name="name" value="{{user.name}}" />
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" value="{{user.email}}" />
              </div>
              <div class="form-group">
                <label for="bio">Bio</label>
                <textarea class="form-control" id="editor" name="bio">
                  {{user.bio}}
                </textarea>
              </div>
              <input type="submit" value="Save Changes" class="btn btn-primary">
            </form>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <h3>Your Avatar</h3>
        <img src="{{user.image}}" alt="avatar" class="d-block img-fluid mb-3" />
        <a href="#" data-toggle="modal" data-target="#editImageModal" class="btn btn-primary btn-block">Edit Avatar</a>
        <a href="#" data-toggle="modal" data-target="#deleteImageModal" class="btn btn-danger btn-block">Delete
          Avatar</a>
      </div>
    </div>
  </div>
</section>

<!-- Edit Image Modal -->
<div class="modal fade" id="editImageModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title">Edit Avatar</h5>
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/upload/profile/image?_method=PUT" method="post" enctype="multipart/form-data">
          <input type="hidden" name="_method" value="put">
          <div class="custom-file mb-3">
            <input type="file" name="image" id="file" class="custom-file-input">
            <label for="file" class="custom-file-label">Choose Avatar</label>
            <small class="form-text text-muted">Max size 3MB</small>
          </div>
          <input type="submit" value="Save Changes" class="btn btn-primary">
          <button class="btn btn-secondary ml-2" data-dismiss="modal">
            Go Back
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete Image Modal -->
<div class="modal fade" id="deleteImageModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Delete Avatar</h5>
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/upload/profile/image/delete?_method=PUT" method="post">
          <input type="hidden" name="_method" value="put">
          <p>Are you sure you want to delete your avatar?</p>
          <input type="submit" value="Delete Avatar" class="btn btn-danger">
          <button class="btn btn-secondary ml-2" data-dismiss="modal">
            Go Back
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title">Change Password</h5>
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><em>User Validation Required</em></p>
        <form action="/user/profile/password" method="post">
          <div class="form-group">
            <label for="email">Enter Your Email</label>
            <input type="email" class="form-control" name="email" />
          </div>
          <div class="form-group">
            <label for="password">Enter Current Password</label>
            <input name="password" type="password" class="form-control" required />
          </div>
          <input type="submit" value="Validate" class="btn btn-success" required />
          <button class="btn btn-secondary ml-2" data-dismiss="modal">
            Go Back
          </button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Delete User Modal -->
<div class="modal fade" id="deleteUserModal">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Delete Account</h5>
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/user/delete?_method=DELETE" method="post">
          <input type="hidden" name="_method" value="delete">
          <p>Are you sure you want to permanently delete your account?</p>
          <p><strong><em>Deleting your account will also delete all of your posts</em></strong></p>
          <input type="submit" value="Delete Account" class="btn btn-danger">
          <button class="btn btn-secondary ml-2" data-dismiss="modal">
            Go Back
          </button>
        </form>
      </div>
    </div>
  </div>
</div>