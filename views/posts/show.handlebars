<!-- HEADER -->
<header id="main-header" class="py-2 bg-info text-white">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-md-6">
        <h1>{{post.title}}</h1>
      </div>
      <div class="col-md-4 ml-auto">
        <h3>{{post.category}} <i class="fas fa-file-alt ml-2"></i></h3>
      </div>
    </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-2 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/" class="btn btn-light btn-block">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
      </div>
      <div class="col-md-3 ml-auto">
        <a class="btn btn-outline-info mr-2" href="/post/edit/{{post.id}}">
          <i class="fas fa-pencil-alt"></i> Edit Post</a>
      </div>
    </div>
  </div>
</section>

<!-- SHOW POST -->
<section id="show-post">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h4>By: {{post.user.name}}</h4>
            <small class="text-muted">{{formatDate post.date 'MMMM Do YYYY'}}</small>
          </div>

          <div class="card-body">
            <p>{{stripTags post.body}}</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <img
          src="https://news.nationalgeographic.com/content/dam/news/2018/05/17/you-can-train-your-cat/02-cat-training-NationalGeographic_1484324.ngsversion.1526587209178.adapt.1900.1.jpg"
          class="card-img">
      </div>
    </div>
  </div>
</section>