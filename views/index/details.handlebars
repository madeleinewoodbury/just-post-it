<!-- HEADER -->
<header id="main-header" class="py-2 bg-danger text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fas fa-user"></i> User Details
        </h1>
      </div>
    </div>
  </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-2 mb-4 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a href="/users" class="btn btn-light btn-block">
          <i class="fas fa-arrow-left"></i> Go Back
        </a>
      </div>
    </div>
  </div>
</section>

<!-- DETAILS -->
<section id="details">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h4>Latest Posts</h4>
          </div>
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Category</th>
                <th>Date Created</th>
              </tr>
            </thead>
            <tbody>
              {{#each posts}}
              <tr>
                <td>{{postIndex @index}}</td>
                <td><a class="post-link" href="/post/show/{{id}}">{{title}}</a></td>
                <td>{{category}}</td>
                <td>{{formatDate date 'MMMM Do YYYY'}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h4>{{userDetails.name}}</h4>
            <small class="text-muted">Member since: {{formatDate post.date 'MMMM Do YYYY'}}</small>
          </div>
          <div class="card-body">
            <img src="{{userDetails.image}}" class="card-img">
            {{#if userDetails.bio}}
            <div class="mt-3">
              <p>{{stripTags userDetails.bio}}</p>
            </div>
            {{/if}}
          </div>
        </div>
      </div>

    </div>
  </div>
</section>