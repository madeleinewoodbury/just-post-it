<!-- HEADER -->
<header id="main-header" class="py-2 bg-primary text-white">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1><i class="fas fa-pencil-alt"></i> Posts</h1>
      </div>
    </div>
</header>

<!-- ACTIONS -->
<section id="actions" class="py-2 mb-2 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6 ml-auto">
        <form action="/post/search" method="post">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search Posts..." name="search" />
            <div class="input-group-append">
              <button type="submit" class="btn btn-primary">Search</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- POSTS -->
<section id="posts">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="card">
          <div class="card-header">
            <h4>Latest Posts</h4>
          </div>
          <table class="table table-striped">
            <thead class="thead-dark">
              <tr>
                <th>#</th>
                <th>Title</th>
                <th>Category</th>
                <th>Date</th>
                <th>Posted By</th>
              </tr>
            </thead>
            <tbody>
              {{#each posts}}
              <tr>
                <td>{{postIndex @index}}</td>
                <td><a class="post-link" href="/post/show/{{id}}">{{title}}</a></td>
                <td>{{category}}</td>
                <td>{{formatDate date 'MM/DD/YY'}}</td>
                <td>{{user.name}}</td>
              </tr>
              {{/each}}
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card text-center bg-primary text-white mb-3">
          <div class="card-body">
            <h3>Posts</h3>
            <h4 class="display-4"><i class="fas fa-pencil-alt"></i> {{numberOfPosts posts}}</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>